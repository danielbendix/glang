fn copyLine(line: i64, from: u8[], to: u64[])
{
    const offset = line * (line + 1) / 2;
    for i in 0 ... line {
        to[i] = from[offset + i];
    }
}

fn solution() -> u64 {
    // This would be helped by inline nested functions.

    const numbers = getNumbers();
    var acc = #allocate<u64>(15);
    var prev = #allocate<u64>(15);

    copyLine(14, numbers, acc);

    for i_ in 2 ... 15 {
        const i = 15 - i_;

        const tmp = acc;
        acc = prev;
        prev = tmp;

        copyLine(i, numbers, acc);
        for j in 0 ... i {
            if (prev[j] > prev[j + 1]) {
                acc[j] += prev[j];
            } else {
                acc[j] += prev[j + 1];
            }
        }

    }

    #free(numbers);
    #free(acc);
    #free(prev);

    return acc[0];
}

fn main() {
    #print(solution());
}
