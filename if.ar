fun ifChain(n: int) -> int {
    if (n == 0) {
        return 1;
    } else if n == 1 {
        return 2;
    } else if n == 2 {
        return 4;
    } else if n == 3 {
        return 8;
    }
}

fun sign(n: int) -> int {
    if n > 0 {
        return 1;
    } else if n < 0 {
        return -1;
    } else {
        return 0;
    }
}
